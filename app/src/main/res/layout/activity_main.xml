<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.reamhae.findanything.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:src="@drawable/title"/>
        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="장소"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"/>

        <Spinner
            android:id="@+id/lost_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/subway_lines"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="품목"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"/>

        <Spinner
            android:id="@+id/items_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/items"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="품목명"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"/>

        <EditText
            android:id="@+id/item_name_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20sp"
            />
    </LinearLayout>

    <TextView
        android:text="분실 기간"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from_date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜를 선택하세요"
            android:textSize="25sp"
            android:paddingLeft="20sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/from_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 선택"
            android:textSize="25sp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="30sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/to_date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜를 선택하세요"
            android:textSize="25sp"
            android:paddingLeft="20sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/to_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 선택"
            android:textSize="25sp"
            android:layout_weight="1" />

    </LinearLayout>



    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:textSize="30sp"
        android:layout_gravity="center"/>

</LinearLayout>
